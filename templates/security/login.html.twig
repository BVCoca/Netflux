{% extends 'base.html.twig' %}

{% block title %}Log in!
{% endblock %}

{% block stylesheets %}
	{{ parent() }}
	<style>
		.form-wrapper {
			display: flex;
			justify-content: center;
			align-items: center;
			height: 100vh;
			background-color: rgba(0, 0, 0, 0.5);
			position: relative;
		}

		.background-image {
			position: absolute;
			top: 0;
			left: 0;
			width: 100%;
			height: 100%;
			background-image: url('assets/pictures/bg_login.png');
			background-size: cover;
			opacity: 0.5;
			z-index: -1;
		}

		.form-container {
			background-color: rgba(0, 0, 0, 0.5);
			padding: 50px;
			border-radius: 10px;
			box-shadow: 0 0 10px rgba(0, 0, 0, 0.3);
			width: 500px;
			height: 400px;
			color: white;
		}

		.form-container label,
		.form-container input,
		.form-container button {
			margin-bottom: 10px;
		}
	</style>
{% endblock %}

{% block body %}
	<div class="form-wrapper">
		<div class="background-image"></div>
		<div class="form-container">
			{% for label,message in app.flashes %}
				<div class="alert alert-{{ label }} alert-dismissible fade show">

					{{ message[0] }}
				</div>
			{% endfor %}

			<h1 class="h3 font-weight-normal">S'identifier</h1>
			<form method="post">
				{% if error %}
					<div class="alert alert-danger" id="dismiss_alert">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
				{% endif %}

				{% if app.user %}
					<div class="mb-3">
						You are logged in as
						{{ app.user.userIdentifier }},
						<a href="{{ path('app_logout') }}">Logout</a>
					</div>
				{% endif %}
				<label for="inputEmail">Email</label>
				<input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
				<label for="inputPassword">Mot de Passe</label>
				<input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>

				<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
				<div class="d-grid gap-2">
					<button class="btn btn-warning mt-2" type="submit">
						S'identifier
					</button>
				</div>
				<div class="d-flex justify-content-between">
					<label>
						<input type="checkbox" name="_remember_me" checked>
						Restez connect√©
					</label>
					<span>
						<a class="text-decoration-none text-warning" href="{{path('app_register')}}">Creer un compte</a>
					</span>
				</div>
			</form>
		</div>
	</div>
{% endblock %}
