{% extends 'base.html.twig' %}

{% block title %}Hello RegisterController!
{% endblock %}

{% block stylesheets %}
	{{ parent() }}
	<style>
		.form-container {
			display: flex;
			justify-content: center;
			align-items: center;
			height: 100vh;
			background-color: rgba(0, 0, 0, 0.5);
			position: relative;
		}

		.form-wrapper {
			background-color: rgba(0, 0, 0, 0.5);
			padding: 50px;
			border-radius: 10px;
			box-shadow: 0 0 10px rgba(0, 0, 0, 0.3);
			width: 500px;
			height: 800px;
			color: white;
		}

		.background-image {
			position: absolute;
			top: 0;
			left: 0;
			width: 100%;
			height: 100%;
			background-image: url('assets/pictures/bg_login.png');
			background-size: cover;
			opacity: 0.5;
			z-index: -1;
		}

		.form-container label,
		.form-container input,
		.form-container button {
			margin-bottom: 10px;
		}
	</style>
{% endblock %}

{% block body %}
	<div class="form-container">
		<div class="background-image"></div>
		<div class="form-wrapper">
			<h1 class="h3 font-weight-normal">Inscription</h1>
			{{ form_start(registerForm) }}
			{{ form_row(registerForm.email) }}
			{{ form_row(registerForm.password) }}
			{{ form_row(registerForm.lastname) }}
			{{ form_row(registerForm.firstname) }}
			{{ form_row(registerForm.avatar) }}
			<div class="d-grid gap-2">
				{{ form_widget(registerForm.submit, { 'attr': {'class': 'btn btn-warning mt-3'} }) }}
			</div>
			{{ form_end(registerForm) }}
		</div>
	</div>
{% endblock %}
