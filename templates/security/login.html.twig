{% extends 'base.html.twig' %}

{% block title %}Log in!
{% endblock %}

{% block stylesheets %}
	{{ parent() }}
	<style></style>
{% endblock %}

{% block body %}
	<div class="form-wrapper">
		<div class="background-image"></div>
		<div class="form-container">
			{% for label,message in app.flashes %}
				<div class="alert alert-{{ label }} alert-dismissible fade show">

					{{ message[0] }}
				</div>
			{% endfor %}
			<h1 class="h3 font-weight-normal">S'identifier</h1>
			<form method="post">
				{% if error %}
					<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
				{% endif %}

				{% if app.user %}
					<div class="mb-3">
						You are logged in as
						{{ app.user.userIdentifier }},
						<a href="{{ path('app_logout') }}">Logout</a>
					</div>
				{% endif %}
				<label for="inputEmail">Email</label>
				<input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
				<label for="inputPassword">Mot de Passe</label>
				<input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>

				<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
				<div class="d-grid gap-2">
					<button class="btn btn-warning mt-2" type="submit">
						S'identifier
					</button>
				</div>
				<div class="d-flex justify-content-between">
					<label>
						<input type="checkbox" name="_remember_me" checked>
						Restez connect√©
					</label>
					<span>
						<a class="text-warning fw-bold text-decoration-none" href="{{path("app_register")}}">
							Creer son compte</a>
					</span>
				</div>
				<span class="d-block text-center">
					<a class="text-warning fw-light text-decoration-none" href="{{path("app_reset_password_request")}}">Mot de passe oublie?</a>


				</span>

			</form>
		</div>
	</div>
{% endblock %}
