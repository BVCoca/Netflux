{% block body %}
	<div class="card-wrapper">
		<div class="background-image"></div>
		<div class="container">
			<div class="row">
				<div class="col-md-6 offset-md-3">
					<div class="card-container">
						<div class="card-body">
							<h1 class="card-title">Bienvenue
								{{ user.firstname }}</h1>
							<img src="{{asset("/uploads/avatar/" ~ user.avatar) }}" alt="Avatar de {{ user.firstname }}" class="img-fluid">
							<div class="mt-5">
								<p class="card-text">
